<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
      <%= link_to 'Log out', '/logout', { method: 'post', local: true, id:'logout' } if logged_in? %> 
      <% if !logged_in? %>
      <%= link_to 'Sign up', '/signup', { id: 'signup' } %>
      <%= link_to 'Sign in', '/signin', { id: 'signin' } %>
      <% end %>
    </nav>
    <p id="notice"> <%= notice %> </p>
    <%= yield %>
  </body>
</html>
