<h1>Posts?</h1>

<%= @user.posts.reverse.each do |post| %>
<%= post.title %>
<%= post.body %>
<% end %>

<%= form_with(model: @comment, local: true) do |f| %>
<br>
  <%= f.label :comment %><br>
  <%= f.text_field :body%> <br>

  <%= f.submit %><br>
  <% end %>


<%= link_to 'Back to Profile', '/' %>
