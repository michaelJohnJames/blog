<h1> Edit account </h1>

<%= form_with(model: @user, local: true) do |f| %>


  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username%>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :f_name %>
  </p>

  <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :l_name %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back to profile', user_path %>
<%= link_to 'Delete account', @user, method: 'delete', data: { confirm: 'Are you sure you want to delete your account?' }, local: true  %>
