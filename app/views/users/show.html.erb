<% if @user == current_user %>
<h2> Make a new post</h2>

<%= form_with(model: @post, local: true) do |f| %>
<%= hidden_field_tag :user_id, @user.id %>
<%= f.hidden_field :post_id %>

  <%= f.label :title %><br>
  <%= f.text_field :title%> <br>

  <%= f.label :body %> <br>
  <%= f.text_area :body %> <br>

  <%= f.submit %><br>
  <% end %>
  <% end %>
<br>
</div>


