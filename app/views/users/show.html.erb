<h1> <%= @user.username %>'s Profile </h1>
<%= @user.description %> <br>
<%= @user.location %>

<% if @user == current_user %>
<h2> Make a new post</h2>

<%= form_with(model: @post, local: true) do |f| %>
<%= hidden_field_tag :user_id, @user.id %>
<%= f.hidden_field :post_id %>

  <%= f.label :title %><br>
  <%= f.text_field :title%> <br>

  <%= f.label :body %> <br>
  <%= f.text_area :body %> <br>

  <%= f.submit %><br>
  <% end %>
  <% end %>
<br>
<hr>
<hr>


<h3>Most recent posts:</h3>

  <% @user.posts.reverse.each do |post| %>
  <%= post.title %><br>
  <%= post.body %><br>
  Post by <%= link_to "#{@user.username}", "/#{@user.id}" %>
<br>
  <%= link_to "Comment", "/comments/show" %>
  <%= form_with(model: Comment.new, local: true) do |f| %>
    <%= hidden_field_tag :user_id, @user.id %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= f.text_area :body %>
    <%= f.submit :Comment %>
    <% post.comments.reverse.each do |comment| %> <br>
        Comment by <%= link_to "#{@user.username}", "/#{@user.id}" %>: <br>
    <%= comment.body %><br>
    <hr>
    <hr>
    <% end %>
    <% end %>
  <hr>
  <% end %>



<%= link_to 'Edit your account', edit_user_path(@user) %>
